    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Books" onAction="#adminBooks"/>
        <Button focusTraversable="false" text="Borrowers" onAction="#adminBorrowers"/>
        <Button focusTraversable="false" text="Inventory" onAction="#adminInventory"/>
        <Button focusTraversable="false" text="Logout" onAction="#backToHome"/>
    </HBox>

</VBox>
