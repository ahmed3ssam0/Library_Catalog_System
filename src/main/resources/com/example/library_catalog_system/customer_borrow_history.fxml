<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="Borrow History" layoutX="50" layoutY="50" styleClass="welcome-text"/>
    <Text fx:id="text"/>

    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Show History" onAction="#customerBorrowings"/>
        <Button focusTraversable="false" text="Back" fx:id="back" onAction="#switchToUser"/>
    </HBox>

</VBox>
