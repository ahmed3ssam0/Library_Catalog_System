<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="Add a Review" layoutX="50" layoutY="50" styleClass="welcome-text"/>
    <TextField fx:id="reviewBookNameField" promptText="Enter Book Title"/>
    <TextField fx:id="reviewRatingField" promptText="Enter Rating (1-5)"/>
    <TextField fx:id="reviewTextField" promptText="Enter Review"/>

    <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER"/>

    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Submit Review" onAction="#addReview"/>
        <Button focusTraversable="false" text="Back" onAction="#Reviews"/>
    </HBox>

</VBox>
