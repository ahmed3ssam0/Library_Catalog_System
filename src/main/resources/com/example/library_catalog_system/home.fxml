<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.HBox?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="Welcome to Library Catalog System!" layoutX="50" layoutY="50" styleClass="welcome-text"/>

    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Login" fx:id="login" onAction="#switchToLogin"/>
        <Button focusTraversable="false" text="Register" fx:id="register" onAction="#switchToRegister"/>
    </HBox>

</VBox>
