<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="Checkout" layoutX="50" layoutY="50" styleClass="welcome-text"/>

    <TextField fx:id="buyingUsername" promptText="Username"/>
    <PasswordField fx:id="buyingPassword" promptText="Password"/>
    <TextField fx:id="creditNum" promptText="Credit Card Number"/>
    <TextField fx:id="cvv" promptText="CVV"/>

    <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER"/>

    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Checkout" onAction="#Credit"/>
        <Button focusTraversable="false" text="Back" onAction="#customerBuying"/>
    </HBox>

</VBox>
