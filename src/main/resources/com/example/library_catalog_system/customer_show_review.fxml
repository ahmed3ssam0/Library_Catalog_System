<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<VBox styleClass="body" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="View Reviews" layoutX="50" layoutY="50" styleClass="welcome-text"/>
    <TextField fx:id="viewReviewsBookNameField" promptText="Enter Book Name"/>
    <TextArea fx:id="reviewsDisplayArea" editable="false" wrapText="true" prefHeight="200" />

    <Text fx:id="text" styleClass="borrowhistory"/>
    <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER"/>
    <HBox spacing="50" alignment="CENTER" fx:id="box">
        <Button text="View Reviews" onAction="#viewBookReviews" focusTraversable="false"/>
        <Button text="Back" onAction="#Reviews" focusTraversable="false"/>
    </HBox>


</VBox>
