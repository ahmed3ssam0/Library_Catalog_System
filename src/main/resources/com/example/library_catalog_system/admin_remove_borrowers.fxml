<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<VBox styleClass="admin" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library_catalog_system.Controller" stylesheets="@style.css">

    <Text text="Book Information" layoutX="50" layoutY="50" styleClass="welcome-text"/>
    <TextField fx:id="removeborrowerid" promptText="Borrower ID"/>
    <PasswordField fx:id="removeadminpassword" promptText="Admin Password"/>

    <Label fx:id="messageLabel" alignment="CENTER" contentDisplay="CENTER"/>

    <HBox fx:id="box" spacing="50" alignment="CENTER">
        <Button focusTraversable="false" text="Remove Borrower" onAction="#removeBorrower"/>
        <Button focusTraversable="false" text="Back" onAction="#adminBorrowers"/>
    </HBox>

</VBox>
